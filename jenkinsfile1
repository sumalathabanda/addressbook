pipeline {
    agent none

tools{
    maven 'mymaven'
}
    stages {
        stage('compile') {
            agent any
            steps {
                echo 'compiling the code'
                sh 'mvn compile'
            }
        }
stage('code review') {
    agent any
            steps {
                echo 'reviewing the code'
                sh 'mvn pmd:pmd'
            }
        }
        stage('unit test') {
            agent any
            steps {
                echo 'unit testing the code'
                sh 'mvn test'
            }
        }
        stage('coverage analysis') {
            agent any
            steps {
                echo 'static code coverage analysis of the code'
                sh 'mvn verify'
            }
        }
        stage('package') {
            agent {label'linux_slave'}
            steps {
                echo 'packaging the code'
                sh 'mvn package'
            }
        }
        stage('publish the artifacts') {
            agent any
            steps {
                echo 'publishing the artifacts to jfrog'
                sh 'mvn -U deploy -s build.xml'
            }
        }
    }
}